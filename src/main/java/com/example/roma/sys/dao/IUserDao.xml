<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<mapper namespace="com.example.roma.sys.dao.IUserDao">
	
	<sql id="Base_Column_List">
	    <![CDATA[
		id,name,username,password
	    ]]>
	</sql>

	<sql id="byParams">
		<where>
	       <if test="id != null">
				AND id = #{id}
			</if>
	       <if test="name != null">
				AND name = #{name}
			</if>
	       <if test="username != null">
				AND username = #{username}
			</if>
	       <if test="password != null">
				AND password = #{password}
			</if>
		</where>
	</sql>

	<insert id="save" parameterType="User">
		<selectKey keyProperty="id" resultType="int" order="BEFORE">
	        select nextval('t_user_id_seq') as id
		</selectKey>
        INSERT INTO t_user (
        	id ,
        	name ,
        	username ,
        	password 
        ) VALUES (
        	#{id ,jdbcType = INTEGER} ,
        	#{name ,jdbcType = VARCHAR} ,
        	#{username ,jdbcType = VARCHAR} ,
        	#{password ,jdbcType = VARCHAR} 
        )
	</insert>

	<insert id="batchSave" parameterType="User" >
		 INSERT INTO t_user  (
        	name ,
        	username ,
        	password 
		) VALUES
		<foreach collection="list" item="item" index="index" separator=",">(
        	#{item.name ,jdbcType = VARCHAR} ,
        	#{item.username ,jdbcType = VARCHAR} ,
        	#{item.password ,jdbcType = VARCHAR} 
			)
		</foreach>
	</insert>

	<update id="update" parameterType="User" >
        UPDATE t_user 
		<set>
				<if test="name != null">
				name = #{name} ,
				</if>
				<if test="username != null">
				username = #{username} ,
				</if>
				<if test="password != null">
				password = #{password} 
				</if>
		</set>
		WHERE  id =#{id}
    </update>

	<delete id="deleteById" parameterType="java.lang.Integer">
        DELETE FROM t_user WHERE
        id =#{id}
    </delete>

    <delete id="delete" parameterType="User">
        DELETE FROM t_user 
        <include refid="byParams"/>   
    </delete>

	<select id="get" resultType="User" parameterType="java.lang.Integer" >
		select 
		<include refid="Base_Column_List" />
		from t_user 
		WHERE  id = #{id}
	</select>

	<select id="queryByParams" resultType="User">
		select 
		<include refid="Base_Column_List" />
		from t_user 
		<include refid="byParams"/>    
	</select>

	<select id="queryAll" resultType="User" >
		select 
		<include refid="Base_Column_List" />
		from t_user 
	</select>

</mapper>

