<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<mapper namespace="com.example.roma.sys.dao.IUserDao">
	
	<sql id="Base_Column_List">
	    <![CDATA[
		id,name,username,password,salt,remark
	    ]]>
	</sql>

	<sql id="byParams">
		<where>
	       <if test="id != null">
				AND id = #{id}
			</if>
	       <if test="name != null">
				AND name = #{name}
			</if>
	       <if test="username != null">
				AND username = #{username}
			</if>
	       <if test="password != null">
				AND password = #{password}
			</if>
	       <if test="salt != null">
				AND salt = #{salt}
			</if>
	       <if test="remark != null">
				AND remark = #{remark}
			</if>
		</where>
	</sql>

	<insert id="save" parameterType="User">
		<selectKey keyProperty="id" resultType="int" order="BEFORE">
	        select nextval('t_user_id_seq') as id
		</selectKey>
        INSERT INTO t_user (
        	id ,
        	name ,
        	username ,
        	password ,
			salt,
			remark
        ) VALUES (
        	#{id ,jdbcType = INTEGER} ,
        	#{name ,jdbcType = VARCHAR} ,
        	#{username ,jdbcType = VARCHAR} ,
        	#{password ,jdbcType = VARCHAR},
        	#{salt ,jdbcType = VARCHAR},
        	#{remark ,jdbcType = VARCHAR}
        )
	</insert>

	<insert id="batchSave" parameterType="User" >
		 INSERT INTO t_user  (
        	name ,
        	username ,
        	password ,
			salt,
			remark
		) VALUES
		<foreach collection="list" item="item" index="index" separator=",">(
        	#{item.name ,jdbcType = VARCHAR} ,
        	#{item.username ,jdbcType = VARCHAR} ,
        	#{item.password ,jdbcType = VARCHAR},
        	#{item.salt ,jdbcType = VARCHAR},
        	#{item.remark ,jdbcType = VARCHAR}
			)
		</foreach>
	</insert>

	<update id="update" parameterType="User" >
        UPDATE t_user 
		<set>
				<if test="name != null">
				name = #{name} ,
				</if>
				<if test="username != null">
				username = #{username} ,
				</if>
				<if test="password != null">
				password = #{password} ,
				</if>
				<if test="salt != null">
					salt = #{salt} ,
				</if>
				<if test="remark != null">
					remark = #{remark}
				</if>
		</set>
		WHERE  id =#{id}
    </update>

	<delete id="deleteById" parameterType="java.lang.Integer">
        DELETE FROM t_user WHERE
        id =#{id}
    </delete>

    <delete id="delete" parameterType="User">
        DELETE FROM t_user 
        <include refid="byParams"/>   
    </delete>

	<select id="get" resultType="User" parameterType="java.lang.Integer" >
		select 
		<include refid="Base_Column_List" />
		from t_user 
		WHERE  id = #{id}
	</select>

	<select id="queryByParams" resultType="User">
		select 
		<include refid="Base_Column_List" />
		from t_user 
		<include refid="byParams"/>    
	</select>

	<select id="queryAll" resultType="User" >
		select 
		<include refid="Base_Column_List" />
		from t_user 
	</select>

	<select id="queryUserRole" resultType="User" resultMap="userRoleMap">
		select u.id as u_id,
			u.name as u_name,
			u.username as u_username,
			u.password as u_password,
			u.salt as u_salt,
			u.remark as u_remark,

			r.id as r_id,
			r.role_name as role_name,
			r.role_code as role_code
		from t_user u
		left join t_user_role ur on ur.user_id = u.id
		left join t_role r on r.id = ur.role_id
		order by u.id asc
	</select>

	<resultMap id="userRoleMap" type="User">
		<result property="id" column="u_id" />
		<result property="name" column="u_name" />
		<result property="username" column="u_username" />
		<result property="password" column="u_password" />
		<result property="salt" column="u_salt" />
		<result property="remark" column="u_remark" />

		<collection property="roles" ofType="Role">
			<result property="id" column="r_id" />
			<result property="roleName" column="role_name" />
			<result property="roleCode" column="role_code" />
		</collection>
	</resultMap>
</mapper>

